version: "1"
steps:
- template:
    name: custom_template
    vars:
      build_event: ${BUILD_EVENT}
  name: invoke base_template
  pull: not_present
- template:
    name: simple_template
    vars:
      build_event: ${BUILD_EVENT}
  name: invoke simple_template
  pull: not_present
- template:
    name: branched_template
    vars:
      build_event: ${BUILD_EVENT}
  name: invoke branched_template
  pull: not_present
templates:
- name: custom_template
  source: git.target.com/DavidVader/heyvela/template.yml@templates-custom
  type: github
- name: base_template
  source: git.target.com/DavidVader/vela-templates/template.yml
  type: github
- name: simple_template
  source: git.target.com/DavidVader/vela-templates/simple/template.yml
  type: github
- name: complex_template
  source: git.target.com/DavidVader/vela-templates/complex/template.yml
  type: github
- name: branched_template
  source: git.target.com/DavidVader/vela-templates/branched-template.yml@branched-template
  type: github
